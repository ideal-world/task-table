{
  "name": "@idealworld/task-table",
  "type": "module",
  "version": "0.0.1",
  "description": "Table component to support task management",
  "author": {
    "name": "gudaoxuri",
    "email": "i@sunisle.org",
    "url": "https://idealworld.group/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ideal-world/task-table.git"
  },
  "keywords": [
    "task",
    "table",
    "project",
    "editor"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/task-table.es.js",
      "require": "./dist/task-table.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "module": "./dist/task-table.es.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && vue-tsc && vite build",
    "docs:dev": "vitepress dev docs --host 0.0.0.0",
    "docs:build": "npm run publish-typedoc && vitepress build docs",
    "test": "vitest --run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "coverage": "vitest run --coverage",
    "publish-typedoc": "typedoc --options typedoc.json"
  },
  "peerDependencies": {
    "vue": "^3.3.4"
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "octicons-css": "^19.8.0",
    "sortablejs": "^1.15.1",
    "vue-i18n": "^9.8.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.3.4",
    "@types/node": "^20.10.4",
    "@types/sortablejs": "^1.15.7",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vitest/ui": "^1.0.1",
    "autoprefixer": "^10.4.16",
    "daisyui": "^4.4.19",
    "eslint": "^8.55.0",
    "happy-dom": "^12.10.3",
    "postcss": "^8.4.32",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "scss": "^0.2.4",
    "tailwindcss": "^3.3.6",
    "typedoc": "^0.25.4",
    "typedoc-plugin-markdown": "4.0.0-next.36",
    "typedoc-vitepress-theme": "1.0.0-next.3",
    "typescript": "^5.3.3",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.6",
    "vitepress": "1.0.0-rc.31",
    "vitest": "^1.0.1",
    "vue-tsc": "^1.8.25"
  }
}
