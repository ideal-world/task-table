{
  "name": "@idealworld/task-table",
  "version": "0.5.5",
  "description": "Table component to support task management",
  "scripts": {
    "build": "rimraf dist && vue-tsc && vite build",
    "docs:dev": "vitepress dev docs --host 0.0.0.0",
    "docs:build": "npm run publish-typedoc && vitepress build docs",
    "test": "vitest --run",
    "coverage": "vitest run --coverage",
    "publish-typedoc": "typedoc --options typedoc.json"
  },
  "keywords": [
    "task",
    "table",
    "project",
    "editor"
  ],
  "license": "MIT",
  "author": {
    "name": "gudaoxuri",
    "email": "i@sunisle.org",
    "url": "https://idealworld.group/"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/task-table.es.js",
      "require": "./dist/task-table.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "type": "module",
  "module": "./dist/task-table.es.js",
  "types": "./dist/types/index.d.ts",
  "dependencies": {
    "octicons-css": "^19.8.0",
    "sortablejs": "^1.15.0",
    "theme-change": "^2.5.0",
    "vue-i18n": "^9.7.0"
  },
  "peerDependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.9.1",
    "@types/sortablejs": "^1.15.5",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "daisyui": "^3.9.4",
    "happy-dom": "^12.10.3",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "scss": "^0.2.4",
    "tailwindcss": "^3.3.5",
    "typedoc": "^0.25.3",
    "typedoc-plugin-markdown": "4.0.0-next.27",
    "typedoc-vitepress-theme": "1.0.0-next.3",
    "typescript": "^5.2.2",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^4.5.0",
    "vitepress": "1.0.0-rc.20",
    "vitest": "^0.34.6",
    "vue-tsc": "^1.8.22"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ideal-world/task-table.git"
  }
}
